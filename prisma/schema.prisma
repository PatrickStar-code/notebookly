generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id        String          @id @default(uuid())
  name      String?
  image     String?
  email     String          @unique
  password  String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @default(now()) @updatedAt
  notebooks NotebookModel[]
}

model NotebookModel {
  id        String      @id @default(cuid())
  title     String
  userId    String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now()) @updatedAt
  image     String
  notes     NoteModel[]
  user      UserModel   @relation(fields: [userId], references: [id])
}

enum NoteEmotion {
  HAPPY       // Feliz
  SAD         // Triste
  EXCITED     // Animado
  ANXIOUS     // Ansioso
  CALM        // Calmo
  GRATEFUL    // Grato
  TIRED       // Cansado
  MOTIVATED   // Motivado
  FRUSTRATED  // Frustrado
  LONELY      // Solitário
  PROUD       // Orgulhoso
  RELAXED     // Relaxado
  INSPIRED    // Inspirado
  CONFUSED    // Confuso
  NOSTALGIC   // Nostálgico
  ANGRY       // Irritado
  BORED       // Entediado
  STRESSED    // Estressado
  HOPEFUL     // Esperançoso
  CURIOUS     // Curioso
  NEUTRAL     // Neutro
}

model NoteModel {
  id         String        @id @default(cuid())
  title      String
  notebookId String
  image      String 
  Emotion    NoteEmotion
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @default(now()) @updatedAt
  notebook   NotebookModel @relation(fields: [notebookId], references: [id])
}
